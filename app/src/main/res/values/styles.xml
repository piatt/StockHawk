<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <!-- Message Views -->
    <style name="HeaderView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Search Views -->
    <style name="ErrorView" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- Stock Views -->
    <style name="SymbolView" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="ListNameView" parent="TextAppearance.AppCompat.Caption"/>
    <style name="DetailNameView" parent="TextAppearance.AppCompat.Medium"/>

    <style name="CurrentPriceView" parent="TextAppearance.AppCompat.Display1"/>
    <style name="DeltaView" parent="TextAppearance.AppCompat.Body2"/>
    <style name="StockKeyView" parent="TextAppearance.AppCompat.Body1"/>
    <style name="StockValueView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:gravity">end</item>
        <item name="layout_gravity">fill_horizontal</item>
    </style>
</resources>