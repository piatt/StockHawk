<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
    </style>

    <!-- Message Layout -->
    <style name="HeaderView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CaptionView" parent="TextAppearance.AppCompat.Small"/>

    <!-- Search Layout -->
    <style name="ErrorView" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/accent</item>
    </style>

    <!-- Stock Item -->
    <style name="SymbolView" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="NameView" parent="TextAppearance.AppCompat.Caption"/>
    <style name="PriceView" parent="TextAppearance.AppCompat.Display1"/>
    <style name="DeltaView" parent="TextAppearance.AppCompat.Body2"/>
</resources>